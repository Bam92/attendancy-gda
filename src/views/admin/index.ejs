<%- include('../includes/head.ejs')%>
<%- include('../includes/header.ejs')%>

<div class="container-fluid w-100 h-100 mt-5 p-5">
  <div class="mt-5  mx-5 pb-5">
    <h2 class="text-danger">Total des pr√©sences</h2>
    <div class="row d-flex justify-content-center mt-2"> 
      <% presences.forEach(presence => { %>
      <div class="col-md-3  px-3 p-sm-1 col-sm-6">
        <div class="card bg-light py-5">
          <div class="card-body">
            <h1 class="text-center text-danger"><%= presence.count %></h1>
            <p class="card-text text-center"><%= presence.presence %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <div class="row d-flex justify-content-center mb-5 mx-5">
    <div class="container-fluid bg-light mx-3 p-4">
      <form action="" method="get" class="d-flex">
        <div class="form-group w-75">
          <input
            id="my-input"
            class="form-control"
            type="text"
            name="dateSearch"
            placeholder="chercher par date"
          />
        </div>
        <div class="form-group w-25">
          <button class="btn btn-danger w-100" type="button">Chercher</button>
        </div>
      </form>
    </div>
  </div>
  <div class="mt-5 mx-5">
    <h2 class="text-danger">Presence du </h2>
    <div class="row d-flex justify-content-center mt-2"> 
      <% presences.forEach(pres => { %>
      <div class="col-md-3 col-sm-6 p-sm-1 px-3 p-xs-1">
        <div class="card bg-light py-5">
          <div class="card-body">
            <h1 class="text-center text-danger"><%= pres.count %></h1>
            <p class="card-text text-center"><%= pres.presence %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<%- include('../includes/footer.ejs')%>
