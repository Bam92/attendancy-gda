<%- include('../includes/head.ejs') %>

<section
  class="container-fluid w-100 h-100 mt-0  d-flex justify-content-center align-items-center"
>
  <div class="offest-4 col-md-4">
    <div class="card bg-light shadow w-100 w-sm-80 border-danger">
      <div class="card-body">
        <h4 class="card-title text-danger">Ajouter un etudiant</h4>
        <form action="/admin/add-student" method="post">
          <div class="form-group mt-4">
            <label for="nom">Noms</label>
            <input
              id="nom"
              class="form-control"
              type="text"
              name="names"
              required
            />
          </div>
          <div class="form-group mt-4">
            <label for="email">Email</label>
            <input
              id="email"
              class="form-control"
              type="email"
              name="email"
              required
            />
          </div>
          <input type="hidden" name="userId" value="<%= userId %>" />
          <div class="form-group mt-4">
            <button class="btn btn-danger" type="submit">Enregistrer</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
