<%- include('../includes/head.ejs') %>

<section
  class="container-fluid w-100 h-100 mt-0 px-5 py-5 d-flex justify-content-center"
>
  <div class=" card bg-light shadow w-50 w-sm-80">
    <div class="card-body">
      <h5 class="card-title">Ajouter un etudiant</h5>
      <form action="/admin/add-student" method="post">
        <div class="form-group mt-4">
          <label for="nom">Noms</label>
          <input id="nom" class="form-control" type="text" name="names" required/>
        </div>
        <div class="form-group mt-4">
          <label for="email">Email</label>
          <input id="email" class="form-control" type="email" name="email" required/>
        </div>
        <input type="hidden" name="userId" value="<%= userId %>" >
        <div class="form-group mt-4">
          <button class="btn btn-primary" type="submit">Enregistrer</button>
        </div>
      </form>
    </div>
  </div>
</section>
