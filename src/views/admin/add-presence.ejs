<%- include('../includes/head.ejs')%> <%- include('../includes/header.ejs')%>

<div
  class="login container-fluid w-100 h-100 pt-5 d-flex justify-content-center align-items-center"
>
  <div class="container px-5">
    <div
      class="d-flex flex-row w-100 justify-content-between align-items-center"
    >
      <h3 class="text-center align-start text-secondary">Faire la presence</h3>
      <p class="text-secondary m-0"><%= new Date().toLocaleString() %></p>
    </div>
    <form action="" method="post">
      <table class="table table-danger table-hover shadow p-2">
        <thead class="thead-light">
          <tr>
            <th class="text-danger text-center">#</th>
            <th class="text-danger text-center">noms</th>
            <th class="text-danger text-center">Present</th>
            <th class="text-danger text-center">R (justifie)</th>
            <th class="text-danger text-center">A (justifie)</th>
            <th class="text-danger text-center">A (non justifie)</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
          <tr>
            <td class="text-center"><%= student.id %></td>
            <td class="text-center"><%= student.noms %></td>
            <td class="text-center">
              <input
                type="radio"
                name="<%= student.id%>"
                id=""
                value="present"
                checked
              />
            </td>
            <td class="text-center">
              <input
                type="radio"
                name="<%= student.id%>"
                id=""
                value="retardJustifie"
              />
            </td>
            <td class="text-center">
              <input
                type="radio"
                name="<%= student.id%>"
                id=""
                value="absentJustifie"
              />
            </td>
            <td class="text-center">
              <input
                type="radio"
                name="<%= student.id%>"
                id=""
                value="absentNonjustifie"
              />
            </td>
          </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <tr>
            <th class="text-danger text-center">#</th>
            <th class="text-danger text-center">noms</th>
            <th class="text-danger text-center">Present</th>
            <th class="text-danger text-center">R (justifie)</th>
            <th class="text-danger text-center">A (justifie)</th>
            <th class="text-danger text-center">A (non justifie)</th>
          </tr>
        </tfoot>
      </table>
      <div class="form-group d-flex justify-content-center">
        <button class="btn btn-primary" type="submit">Enregistrer</button>
      </div>
    </form>
  </div>
</div>
<%- include('../includes/footer.ejs')%>
