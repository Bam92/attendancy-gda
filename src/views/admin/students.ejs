<%- include('../includes/head.ejs')%>
<%- include('../includes/header.ejs')%>

<div
  class="container w-100 h-100 mt-5 p-5"
>
  <div class="row">
    <div class="col-md-10">
      <div class="d-flex flex-row w-100 justify-content-between">
        <h3 class="text-center align-start text-secondary">
          Listes des etudiants
        </h3>
        <a href="/admin/add-student">
          <button class="btn btn-primary" type="button">Nouveau</button>
        </a>
      </div>
      <table class="table table-danger shadow">
        <thead class="thead-light">
          <tr>
            <th class="text-danger">#</th>
            <th class="text-danger">noms</th>
            <th class="text-danger">email</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.noms %></td>
            <td><%= student.email %></td>
          </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <tr>
            <th class="text-danger">#</th>
            <th class="text-danger">noms</th>
            <th class="text-danger">email</th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
<%- include('../includes/footer.ejs')%>
